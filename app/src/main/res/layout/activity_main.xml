<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGrey"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/workingsTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text=""
        android:textColor="@color/white"
        android:textAlignment="textEnd"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text=""
        android:textColor="@color/white"
        android:textAlignment="textEnd"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workingsTextView" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="@dimen/calcButtonTextSize"
        android:background="@null"
        android:textColor="@color/red"
        android:text="C"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@+id/bracketsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultTextView"
        android:onClick="clearOnClick"/>

    <Button
        android:id="@+id/bracketsButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="@dimen/calcButtonTextSize"
        android:background="@null"
        android:textColor="@color/orange"
        android:text="()"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@+id/powerOfButton"
        app:layout_constraintStart_toEndOf="@+id/clearButton"
        app:layout_constraintTop_toBottomOf="@+id/resultTextView"
        android:onClick="bracketsOnClick"/>

    <Button
        android:id="@+id/powerOfButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="@dimen/calcButtonTextSize"
        android:background="@null"
        android:textColor="@color/orange"
        android:text="^"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@+id/divisionButton"
        app:layout_constraintStart_toEndOf="@+id/bracketsButton"
        app:layout_constraintTop_toBottomOf="@+id/resultTextView"
        android:onClick="powerOfOnClick"/>

    <Button
        android:id="@+id/divisionButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="@dimen/calcButtonTextSize"
        android:background="@null"
        android:textColor="@color/orange"
        android:text="/"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/powerOfButton"
        app:layout_constraintTop_toBottomOf="@+id/resultTextView"
        android:onClick="divisionOnClick"/>


    <Button
        android:id="@+id/sevenButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="@dimen/calcButtonTextSize"
        android:background="@null"
        android:textColor="@color/white"
        android:text="7"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@+id/eightButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divisionButton"
        android:onClick="sevenOnClick"/>

    <Button
        android:id="@+id/eightButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="@dimen/calcButtonTextSize"
        android:background="@null"
        android:textColor="@color/white"
        android:text="8"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@+id/nineButton"
        app:layout_constraintStart_toEndOf="@+id/sevenButton"
        app:layout_constraintTop_toBottomOf="@+id/divisionButton"
        android:onClick="eightOnClick"/>

    <Button
        android:id="@+id/nineButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="@dimen/calcButtonTextSize"
        android:background="@null"
        android:textColor="@color/white"
        android:text="9"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@+id/timesButton"
        app:layout_constraintStart_toEndOf="@+id/eightButton"
        app:layout_constraintTop_toBottomOf="@+id/divisionButton"
        android:onClick="nineOnClick"/>

    <Button
        android:id="@+id/timesButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="@dimen/calcButtonTextSize"
        android:background="@null"
        android:textColor="@color/orange"
        android:text="X"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nineButton"
        app:layout_constraintTop_toBottomOf="@+id/divisionButton"
        android:onClick="timesOnClick"/>

    <Button
        android:id="@+id/fourButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="@dimen/calcButtonTextSize"
        android:background="@null"
        android:textColor="@color/white"
        android:text="4"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@+id/fiveButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timesButton"
        android:onClick="fourOnClick"/>

    <Button
        android:id="@+id/fiveButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="@dimen/calcButtonTextSize"
        android:background="@null"
        android:textColor="@color/white"
        android:text="5"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@+id/sixButton"
        app:layout_constraintStart_toEndOf="@+id/fourButton"
        app:layout_constraintTop_toBottomOf="@+id/timesButton"
        android:onClick="fiveOnClick"/>

    <Button
        android:id="@+id/sixButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="@dimen/calcButtonTextSize"
        android:background="@null"
        android:textColor="@color/white"
        android:text="6"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@+id/minusButton"
        app:layout_constraintStart_toEndOf="@+id/fiveButton"
        app:layout_constraintTop_toBottomOf="@+id/timesButton"
        android:onClick="sixOnClick"/>

    <Button
        android:id="@+id/minusButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="@dimen/calcButtonTextSize"
        android:background="@null"
        android:textColor="@color/orange"
        android:text="-"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sixButton"
        app:layout_constraintTop_toBottomOf="@+id/timesButton"
        android:onClick="minusOnClick"/>

    <Button
        android:id="@+id/oneButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="@dimen/calcButtonTextSize"
        android:background="@null"
        android:textColor="@color/white"
        android:text="1"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@+id/twoButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/minusButton"
        android:onClick="oneOnClick"/>

    <Button
        android:id="@+id/twoButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="@dimen/calcButtonTextSize"
        android:background="@null"
        android:textColor="@color/white"
        android:text="2"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@+id/threeButton"
        app:layout_constraintStart_toEndOf="@+id/oneButton"
        app:layout_constraintTop_toBottomOf="@+id/minusButton"
        android:onClick="twoOnClick"/>

    <Button
        android:id="@+id/threeButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="@dimen/calcButtonTextSize"
        android:background="@null"
        android:textColor="@color/white"
        android:text="3"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@+id/plusButton"
        app:layout_constraintStart_toEndOf="@+id/twoButton"
        app:layout_constraintTop_toBottomOf="@+id/minusButton"
        android:onClick="threeOnClick"/>

    <Button
        android:id="@+id/plusButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="@dimen/calcButtonTextSize"
        android:background="@null"
        android:textColor="@color/orange"
        android:text="+"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/threeButton"
        app:layout_constraintTop_toBottomOf="@+id/minusButton"
        android:onClick="plusOnClick"/>

    <!-- Kelompok Tombol Pertama (., 0, =) -->
    <Button
        android:id="@+id/decimalButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="@dimen/calcButtonTextSize"
        android:background="@null"
        android:textColor="@color/white"
        android:text="."
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@+id/zeroButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plusButton"
        android:onClick="decimalOnClick"/>

    <Button
        android:id="@+id/zeroButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="@dimen/calcButtonTextSize"
        android:background="@null"
        android:textColor="@color/white"
        android:text="0"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@+id/equalsButton"
        app:layout_constraintStart_toEndOf="@+id/decimalButton"
        app:layout_constraintTop_toBottomOf="@+id/plusButton"
        android:onClick="zeroOnClick"/>

    <Button
        android:id="@+id/equalsButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="40sp"
        android:background="@color/orange"
        android:textColor="@color/white"
        android:text="="
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/zeroButton"
        app:layout_constraintTop_toBottomOf="@+id/plusButton"
        android:onClick="equalsOnClick"/>
</androidx.constraintlayout.widget.ConstraintLayout>


